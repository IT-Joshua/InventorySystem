    private async Task HandleCreateAccount()
    {
        if (createAccountModel.Password != createAccountModel.ConfirmPassword)
        {
            await ShowMessage("Passwords do not match!");
            StateHasChanged();
            return;
        }
        var usernameCheck = await loginClient.GetUsersAsync(createAccountModel.Username);
        var emailCheck = await loginClient.GetUsersAsync(createAccountModel.Email);

        if ((usernameCheck != null && usernameCheck.Count > 0) ||
        (emailCheck != null && emailCheck.Count > 0))
        {
            await ShowMessage("Username or Email is already taken!");
            return;
        }
        var newUser = new LogInModels
        {

            Firstname = createAccountModel.FirstName,
            Lastname = createAccountModel.LastName,
            Email = createAccountModel.Email,
            Username = createAccountModel.Username,
            Password = createAccountModel.Password,
            Access = "",
            Status = true
        };


        var result = await loginClient.CreateUserAsync(newUser);
